generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  name      String?
  expenses  Expenses[]
}

model Expenses {
  id        Int   @id @default(autoincrement())
  name      String
  amount    Float
  date      DateTime
  user      Users    @relation(fields: [userId], references: [id])
  userId    Int
}
